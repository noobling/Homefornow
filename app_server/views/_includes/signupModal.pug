.modal.fade(id='signupmodalshort',role='dialog')
    .modal-dialog.modal-sm
        .modal-content
            .modal-header
                button(type='button',data-dismiss='modal').close &times;
                h2.modal-title For Now.
                h3.modal-title Help us find somewhere close to you.
            .modal-body
                form
                    .form-group
                        label(for='fName') First Name
                        input(type='text', placeholder='e.g. John').form-control#fName
                    .form-group
                        label(for='lName') Last Name
                        input(type='text', placeholder='e.g. Doe').form-control#lName
                    .form-group
                        label(for='pwd') Age
                        select.form-control(placeholder='Select your age')#age
                            option Select your age
                            option 14
                            option 15
                            option 16
                            option 17
                            option 18
                            option 19
                            option 20
                            option 21
                            option 22
                            option 23
                            option 24
                            option 25
                    .form-group
                        .row
                            .col-xs-6
                                select.form-control(placeholder='Gender')#gender
                                    option Gender
                                    option Male
                                    option Female
                                    option Other
                            .col-xs-6
                                label.checkbox-inline
                                    input(type='checkbox', value='')#child
                                    | Parent with child?
                .text-center
                    a(href='/locations/short_term')
                        button.btn.btn-default Submit

